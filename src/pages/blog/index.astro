---
import Layout from "../../layouts/Layout.astro"

const allPosts = await Astro.glob("./**/*.md");
console.log(allPosts)
---

<Layout>
<div class="container">in the blog</div>
<ol>
{
    allPosts.map((post) => (
        <li>
            <a href={post.url} >{post.frontmatter.title}</a> 
        </li>
    ))
}
</ol>

</Layout>
